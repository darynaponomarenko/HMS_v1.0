<Window x:Class="HMS_v1._0.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon ="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:prismCommands="http://prismlibrary.com/commands"
        xmlns:local="clr-namespace:HMS_v1._0.Views"
        xmlns:viewmodels="clr-namespace:HMS_v1._0.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    mc:Ignorable="d"
        Title="" Height="1100" Width="1940" ResizeMode="CanResizeWithGrip"  WindowState="Maximized"  WindowStyle="ThreeDBorderWindow">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border  BorderThickness="2" 
            Padding="2" MouseDown="Border_MouseDown">
        <Border CornerRadius="5">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop  Offset="0"/>
                    <GradientStop Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>

                <!--Left Menu-->
                <Border CornerRadius="30"  Margin="20">
                    <Grid Grid.Column="0">
                        <StackPanel VerticalAlignment="Top">
                            <Button Style="{StaticResource topMenuButton}">
                                <Icon:PackIconMaterial Kind="BellCheckOutline" Style="{StaticResource menuButtonIcon}"/>
                            </Button>

                            <Separator  Margin="20 0 20 10" Height="0.8"/>

                            <Button Style="{StaticResource menuButton}">
                                <Icon:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}"/>

                            </Button>

                            <Button Style="{StaticResource menuButton}" Click="Button_Click">
                                <Icon:PackIconMaterial Kind="AccountEdit" Style="{StaticResource menuButtonIcon}"/>

                            </Button>

                            <Button Style="{StaticResource menuButton}" Command="{Binding OpenAppointmentViewCommand}" IsEnabled="{Binding IsButtonEnabled}">
                                <Icon:PackIconMaterial Kind="Account" Style="{StaticResource menuButtonIcon}"/>

                            </Button>

                            <Button Style="{StaticResource menuButton}" Click="Button_Click_2" IsEnabled="{Binding IsFormsButtonEnabled}">
                                <Icon:PackIconMaterial Kind="NewspaperVariantMultipleOutline"  Style="{StaticResource menuButtonIcon}"/>

                            </Button>

                            <Separator Margin="20 300 20 10" Height="0.8"/>

                            <Button Style="{StaticResource menuButton}">
                                <Icon:PackIconMaterial Kind="LogoutVariant" Style="{StaticResource menuButtonIcon}"/>

                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                <!--Main Section-->
                <Grid Grid.Column="1" Margin="5 20 25 20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Title Section-->
                    <StackPanel Margin="15 15 0 20">
                        <TextBlock Text="Dashboard" Style="{StaticResource titleText}" FontFamily="{StaticResource HelveticaBold}"/>
                    </StackPanel>

                    <!--Search Section-->
                    <Grid Grid.Column="2" VerticalAlignment="Top" Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                    </Grid>

                    <!--DataTable Section-->
                    <Border Grid.ColumnSpan="3" Grid.Row="1" BorderThickness="15">

                        <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Visible">
                            <ListView Name="PlaningListView" Style="{StaticResource ListView}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" FontFamily="{StaticResource Helvetica}" ItemsSource="{Binding RegisteredAppointments}" SelectedItem="{Binding SelectedAppointment}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Dane pacjenta" 
                                        DisplayMemberBinding="{Binding Path=PayerName, Mode=OneWay}" Width="200"/>
                                        <GridViewColumn Header="Pesel"
                                        DisplayMemberBinding="{Binding Path=Pesel, Mode=OneWay}" Width="120"/>
                                        <GridViewColumn Header="Lekarz"
                                        DisplayMemberBinding="{Binding Path=Worklist, Mode=OneWay}" Width="180"/>
                                        <GridViewColumn Header="Data"
                                        DisplayMemberBinding="{Binding Path=Date, Mode=OneWay}" Width="90"/>
                                        <GridViewColumn Header="Godzina, czas"
                                        DisplayMemberBinding="{Binding Path=Time, Mode=OneWay}" Width="90"/>
                                        <GridViewColumn Header="Procedura"
                                        DisplayMemberBinding="{Binding Path=Procedure, Mode=OneWay}" Width="200"/>
                                        <GridViewColumn Header="Priorytet"
                                        DisplayMemberBinding="{Binding Path=Priority, Mode=OneWay}" Width="200"/>
                                        <GridViewColumn Header="Jednostka zlecająca"
                                        DisplayMemberBinding="{Binding Path=ContractingAuthorities, Mode=OneWay}" Width="280"/>
                                        <GridViewColumn Header="Data wystawienia skierowania"
                                        DisplayMemberBinding="{Binding Path=DateOfIssue, Mode=OneWay}" Width="200"/>
                                        <GridViewColumn Header="Powód przyjęcia"
                                        DisplayMemberBinding="{Binding Path=ReasonForAdmission, Mode=OneWay}" Width="130"/>
                                        <GridViewColumn Header="Kod ICD10"
                                        DisplayMemberBinding="{Binding Path=CodeICD, Mode=OneWay}" Width="100"/>
                                        <GridViewColumn Header="Numer umowy z NFZ"
                                        DisplayMemberBinding="{Binding Path=NFZContractNr, Mode=OneWay}" Width="140"/>
                                    </GridView>
                                </ListView.View>

                            </ListView>
                        </ScrollViewer>
                        
                    </Border>

                </Grid>

                <!--Right Section-->

            </Grid>

        </Border>
    </Border>

</Window>
